<Window x:Class="LevelSetsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelSetsEditor"
        xmlns:vm ="clr-namespace:LevelSetsEditor.ViewModel"
        xmlns:chromium ="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:propview ="clr-namespace:LevelSetsEditor.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1200" >

    <TabControl Name="TabControlMain" >
        <TabItem Name="TabItemEditor" Header="Редактор">
        

            <Grid>
               
                <GroupBox Header="Инфо о видео" x:Name="VideoInfoGroupBox" HorizontalAlignment="Left" Height="668"  VerticalAlignment="Top" Width="605"
                  DataContext="{Binding VideoInfoVM}" RenderTransformOrigin="0.269,1.604" Margin="10,10,0,0">
                    <StackPanel Orientation="Vertical"   >
                        <propview:PropertyViewer  DataContext="{Binding Title}" Tag="Название"/>
                        <propview:PropertyViewer  DataContext="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Tag="Источник"/>
                        <Label Content="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Background="Chocolate"/>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                    </StackPanel>
                </GroupBox>
                




            </Grid>
        </TabItem>
        <TabItem Header="Браузер">
            <DockPanel>
                <Grid Name="GridBrowser" DockPanel.Dock="Top">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="150"/>

                    </Grid.ColumnDefinitions>
                    <Button Content="JOIN" Margin="5" Grid.Column="0" Click="Button_Click_2" />
                    <TextBox Name="TextURL"  Grid.Column="1" Text="{Binding Address, ElementName=Browser, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Margin="5" FontSize="16" KeyDown="TextURL_KeyDown" />
                    <Button Content="GO!" Margin="5" Grid.Column="2" Click="Button_Click"/>
                    <Button Content="Youtube" Margin="5" Grid.Column="5" Click="Button_Click_1" />

                    <Button Content="&lt;" Command="{Binding WebBrowser.BackCommand, ElementName=Browser}" Margin="5" Grid.Column="3" />
                    <Button Content="&gt;" Command="{Binding WebBrowser.ForwardCommand, ElementName=Browser}" Margin="5" Grid.Column="4" />
                </Grid>

                <Grid Background="DarkOrange" Margin="5">
                    <chromium:ChromiumWebBrowser Name="Browser" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Address="https://www.youtube.com/watch?v=MTWdt5DB9k0"/>
                </Grid>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>
