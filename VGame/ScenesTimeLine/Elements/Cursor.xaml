<UserControl x:Class="ScenesTimeLine.Elements.Cursor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScenesTimeLine.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="10">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*" Name="Row2"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>

        <Path Data="M0,0 L5,5 10,0" Grid.Row="0"  Stroke="#FF7467F0" />
        <Path Data="M5,0 L5,1000" Grid.Row="1"  Stroke="#FF7467F0" />
        <Path Data="M0,5 L5,0 10,5" Grid.Row="2"  Stroke="#FF7467F0" />
        <!--<Line Stroke="#FF7467F0"  Grid.Row="1" StrokeThickness="1" X1="10" Y1="0" X2="10" Y2="{Binding ElementName=Row2, Path=ActualHeight}"></Line>-->


    </Grid>
</UserControl>
