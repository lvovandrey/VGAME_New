<UserControl x:Class="LevelSetsEditor.View.TimeLine.CursorTimeLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelSetsEditor.View.TimeLine"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="100" Background="Green" BorderBrush="YellowGreen" BorderThickness="2">
    <Grid>
        <TextBlock x:Name="PosLabel"  
                   Text="{Binding Time, UpdateSourceTrigger=PropertyChanged, StringFormat=hh\\:mm\\:ss\\.f}"  
                   FontSize="12" HorizontalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>
