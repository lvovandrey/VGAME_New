<Window x:Class="LevelSetsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LevelSetsEditor"
        xmlns:vm ="clr-namespace:LevelSetsEditor.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Window.DataContext>
        <vm:LevelSetVM/>
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding SceneSets, UpdateSourceTrigger=PropertyChanged}" 
                 SelectedItem ="{Binding SelectedSceneSetVM }" 
                HorizontalAlignment="Left" 
                 Height="403" Margin="10,10,0,0" VerticalAlignment="Top" Width="219">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding UnitsCount, UpdateSourceTrigger=PropertyChanged}"></Label>
                        <Label Content="{Binding VideoSegment.TimeBegin, UpdateSourceTrigger=PropertyChanged}"></Label>
                        <Label Content="{Binding VideoSegment.TimeEnd, UpdateSourceTrigger=PropertyChanged}"></Label>
                        <Label Content="{Binding VideoSegment.Source, UpdateSourceTrigger=PropertyChanged}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="{Binding Name}" HorizontalAlignment="Left" Margin="267,22,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Выбранный элемент" HorizontalAlignment="Left" Height="201" Margin="234,51,0,0" VerticalAlignment="Top" Width="223"
                  DataContext="{Binding SelectedSceneSetVM}">
            <StackPanel Orientation="Vertical" RenderTransformOrigin="0.492,0.534"   >
                <TextBox Text="{Binding UnitsCount}"></TextBox>
                <TextBox Text="{Binding VideoSegment.TimeBegin}"></TextBox>
                <TextBox Text="{Binding VideoSegment.TimeEnd}"></TextBox>
                <TextBox Text="{Binding VideoSegment.Source}"></TextBox>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Инфо о видео" HorizontalAlignment="Left" Height="223"  VerticalAlignment="Top" Width="260"
                  DataContext="{Binding VideoInfoVM}" RenderTransformOrigin="0.269,1.604" Margin="495,51,0,0">
            <StackPanel Orientation="Vertical"   >
                <TextBox Text="{Binding Title}"></TextBox>
                <TextBox Text="{Binding VideoSegment.TimeBegin}"></TextBox>
                <TextBox Text="{Binding VideoSegment.TimeEnd}"></TextBox>
                <TextBox Text="{Binding VideoSegment.Source}"></TextBox>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
