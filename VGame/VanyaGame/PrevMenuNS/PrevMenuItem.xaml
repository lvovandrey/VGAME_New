<UserControl x:Class="VanyaGame.PrevMenuNS.PrevMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:local="clr-namespace:VanyaGame" HorizontalAlignment="Center" VerticalAlignment="Center">
    <UserControl.Resources>
        <Cursor x:Key="HandPushCursor">Images/HandPush.cur</Cursor>
    </UserControl.Resources>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="27" BlurRadius="50" Color="#D7000000"/>
        </Grid.Effect>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Rectangle StrokeThickness="5" Fill="#335BB68D" Grid.RowSpan="2">

            <Rectangle.Stroke>
                <RadialGradientBrush>
                    <GradientStop Color="#FF103E29" Offset="1"/>
                    <GradientStop Color="#FF36BD80"/>
                </RadialGradientBrush>
            </Rectangle.Stroke>
        </Rectangle>
        <!--<Rectangle Stroke="#FF878787" StrokeThickness="3" Fill="#07FFFFFF" Grid.RowSpan="1"/>-->

        <Image Name="Img" Margin="10"  Source="/VanyaGame;component/Images/no_image.png"  Width="300" Height="200"  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Stretch="Uniform" Cursor="{StaticResource HandPushCursor}" 
               MouseDown="Img_MouseDown" MouseUp="Img_MouseUp" MouseLeave="Img_MouseLeave" >
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.PreviewMouseDown">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard TargetProperty="Opacity" TargetName="Img">
                                <DoubleAnimation  To="0.1"
                             
                             Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="Image.MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard TargetProperty="Opacity" TargetName="Img">
                                <DoubleAnimation  To="0.6"
                             Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="Image.MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard TargetProperty="Opacity" TargetName="Img">
                                <DoubleAnimation To="1"
                             Duration="0:0:0.3" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Image.Triggers>

        </Image>

        <TextBlock Name="Text" Grid.Row="1" Width="{Binding ElementName=Img, Path=Width}" VerticalAlignment="Stretch" TextAlignment="Center"
               Text="Текст по умолчанию длинный очень очень длинный длинный длинный длинный длинный длинный" FontFamily="Comic Sans MS" FontSize="16" Margin="10,1,10,0"  
                   TextWrapping="Wrap" TextTrimming="CharacterEllipsis" Foreground="White" FontStyle="Italic">
            <TextBlock.ToolTip>
                <ToolTip>
                    <TextBlock Name="TextToolTip" Text="Подсказка" FontSize="12"></TextBlock>
                </ToolTip>
            </TextBlock.ToolTip>
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="9" Color="#FF2A2F44" Opacity="0.6"/>
            </TextBlock.Effect>
            
        </TextBlock>
    </Grid>
</UserControl>
