<UserControl x:Class="VanyaGame.GameNumberDB.Interface.PaperGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="PaperGird">
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>

        <Image Name="Img" Source="pack://application:,,,/1.GameNumber/Images/Paper.png" Stretch="Fill"  Panel.ZIndex="22" Margin="15" >
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="26" BlurRadius="60" Opacity="0.4" Color="#FF4F0000" />
                </Image.Effect>
        </Image>
    </Grid>
</UserControl>
