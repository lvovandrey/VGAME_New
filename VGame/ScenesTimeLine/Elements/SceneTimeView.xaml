<UserControl x:Class="ScenesTimeLine.Elements.SceneTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScenesTimeLine.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500" >
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
             
                <Rectangle Fill="ForestGreen" VerticalAlignment="Stretch" Margin="1" Stroke="#FF001500"  Opacity="0.3" RadiusX="7" RadiusY="7" StrokeThickness="2" Height="120"/>
            <TextBlock Height="22" Text="  00:12:33 - 00:14:54  " Name="TextBlock1" HorizontalAlignment="Center" Margin="0,-33,0,42" Panel.ZIndex="3" FontSize="10" Foreground="Black"  />
            <Rectangle Fill="#FFFFFF3E"  Margin="1,-106,1,2" Stroke="Black" Width="{Binding ElementName=TextBlock1, Path=ActualWidth}" Panel.ZIndex="2"  Opacity="0.7" RadiusX="2" RadiusY="2" StrokeThickness="1" Height="{Binding ElementName=TextBlock1, Path=ActualHeight}" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</UserControl>
