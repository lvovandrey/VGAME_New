<UserControl x:Class="CardsEditor.View.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardsEditor.View"
              mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400" Background="White">
    <Grid >
        <StackPanel>
            <GroupBox Header="Инфо о видео" x:Name="VideoInfoGroupBox" >
                <StackPanel Orientation="Vertical">
                    <Image Source="{Binding ImageAdressURI}"></Image>
                    <local:PropertyViewer  DataContext="{Binding Title, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Tag="Название"/>
                    <local:PropertyViewer  DataContext="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Tag="Описание"/>
                    <local:PropertyViewer  DataContext="{Binding SoundAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Tag="URL-адрес"/>
                    <local:PropertyViewer  DataContext="{Binding ImageAdress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Tag="Источник"/>
                    <Button Content="Выбрать изображение" Command="{Binding OpenImageFileCommand}" Margin="80,0,80,20"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>

