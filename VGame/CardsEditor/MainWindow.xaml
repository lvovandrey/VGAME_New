<Window x:Class="CardsEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardsEditor"
        xmlns:view="clr-namespace:CardsEditor.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
            <view:ListCardsView></view:ListCardsView>
        <StackPanel Grid.Column="1">
            
            <view:CardView  DataContext="{Binding SelectedCardVM}"></view:CardView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <ListBox ItemsSource="{Binding Path=TagVMs, UpdateSourceTrigger=PropertyChanged,
                 Mode=OneWay}"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" MinHeight="100" MaxHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding AddTagCommand}" Height="25" Width="25" Margin="2 2 5 2" Content="+"/>
                        <Button Command="{Binding RemoveTagCommand}" Height="25" Width="25" Margin="2 2 5 2" Content="-"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="1" >
                    <Button Command="{Binding PushTagInCardCommand}" Height="20" Width="20" Margin="2" Content="-&gt;"/>
                    <Button Command="{Binding PushAllTagInCardCommand}" Height="20" Width="20" Margin="2" Content="=&gt;"/>
                    <Button Command="{Binding PopTagFromCardCommand}" Height="20" Width="20" Margin="2" Content="&lt;-"/>
                    <Button Command="{Binding PopAllTagFromCardCommand}" Height="20" Width="20" Margin="2" Content="&lt;="/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <ListBox ItemsSource="{Binding Path=SelectedCardTagVMs, UpdateSourceTrigger=PropertyChanged,
                 Mode=OneWay}"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" MinHeight="100" MaxHeight="200">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
                                    
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
                
            </Grid>

        </StackPanel>
    </Grid>
</Window>
