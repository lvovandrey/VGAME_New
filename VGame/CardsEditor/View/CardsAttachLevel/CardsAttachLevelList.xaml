<UserControl x:Class="CardsEditor.View.CardsAttachLevel.CardsAttachLevelList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardsEditor.View.CardsAttachLevel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
       
        <ListBox SelectedItem="{Binding SelectedCardVM,UpdateSourceTrigger=PropertyChanged}" 
                 ItemsSource="{Binding Path=CardVMs, UpdateSourceTrigger=PropertyChanged,
                 Mode=OneWay}"
                 Grid.Row="1" Grid.ColumnSpan="12" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible" 
                 ScrollViewer.CanContentScroll="False" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:CardAttachedView HorizontalAlignment="Stretch"/>
                </DataTemplate>
            </ListBox.ItemTemplate>


        </ListBox>
    </Grid>
</UserControl>
